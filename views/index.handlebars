<h1>Eat Da Burger!</h1>

<h2>Burgers that are not devoured!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
    <li>{{this.burger_name}} 
      {{>burgers/burger-block devoured=true}}</li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are devoured!</h2>

<ul>
  {{#eachburgers}}
    {{#if devoured}}
      <li>{{this.burger_name}}</li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger:</label>
    <input type="text" id="burg" name="name">
  </div>

 

  <button type="submit">Add Burger</button>
</form>